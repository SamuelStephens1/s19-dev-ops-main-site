---
// Header.astro
// Your branded site header with logo, nav links, and call/email CTAs.

import HeaderLink from './HeaderLink.astro';
const SITE_TITLE = 'YourFirmName';
---

<header>
  <nav>
    <div class="logo">
      <a href="/">
        <img src="/assets/logo.svg" alt="{SITE_TITLE} logo" />
      </a>
    </div>

    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/services">Services</HeaderLink>
      <HeaderLink href="/resources">Resources</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>

    <div class="contact-ctas">
      <a href="tel:+16155550123" aria-label="Call us">üìû</a>
      <a href="mailto:info@yourfirm.com" aria-label="Email us">‚úâÔ∏è</a>
    </div>
  </nav>
</header>

<style>
  header {
    background: #ffffff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  }
  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
  }
  .logo img {
    height: 40px;
  }
  .internal-links {
    display: flex;
    gap: 1rem;
  }
  .contact-ctas a {
    margin-left: 1rem;
    font-size: 1.25rem;
    text-decoration: none;
  }
  @media (max-width: 720px) {
    .internal-links {
      display: none;
    }
  }
</style>
