  name: 'YourFirmName',
  description,
  url: siteUrl,
  telephone: '+1-615-555-0123',
  email: 'info@yourfirm.com',
  address: {
    '@type': 'PostalAddress',
    streetAddress: '123 Main St',
    addressLocality: 'Cookeville',
    addressRegion: 'TN',
    postalCode: '38501',
    addressCountry: 'US'
  },
  areaServed: 'Cookeville, TN',
  openingHours: 'Mo-Fr 08:00-18:00'
};
---
<MainLayout {title} {description}>
