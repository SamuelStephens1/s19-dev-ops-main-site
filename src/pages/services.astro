  <script>
    // Collapsible chips
    const wrap   = document.querySelector('.chipsWrap');
    const list   = document.getElementById('chipsList');
    const toggle = document.getElementById('chipsToggle');

    function setCollapsedHeight() {
      if (!wrap || !list) return;
      const items = Array.from(list.children);
      if (items.length === 0) return;

      // Height of first row (max of items in that row)
      const firstRowTop = items[0].offsetTop;
      const firstRowHeights = items
        .filter(li => li.offsetTop === firstRowTop)
        .map(li => li.getBoundingClientRect().height);

      const rowHeight = Math.max(...firstRowHeights);
      const extra = 12; // breathing room
      wrap.style.maxHeight = (rowHeight + extra) + 'px';
    }

    function expand() {
      wrap.dataset.expanded = 'true';
      wrap.style.maxHeight = list.scrollHeight + 'px';
      toggle.setAttribute('aria-expanded', 'true');
      toggle.textContent = 'Show less';
    }

    function collapse() {
      wrap.dataset.expanded = 'false';
      setCollapsedHeight();
      toggle.setAttribute('aria-expanded', 'false');
      toggle.textContent = 'Show more';
    }

    toggle?.addEventListener('click', () => {
      if (wrap?.dataset.expanded === 'true') collapse();
      else expand();
    });

    const initChips = () => collapse();
    window.addEventListener('load', initChips);
    window.addEventListener('resize', () => {
      if (!wrap || !list) return;
      if (wrap.dataset.expanded === 'false') setCollapsedHeight();
      else wrap.style.maxHeight = list.scrollHeight + 'px';
    });

    // Back to top
    const btn = document.getElementById('backToTop');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 400) btn.classList.add('show');
      else btn.classList.remove('show');
    });
    btn.addEventListener('click', () => window.scrollTo({ top: 0, behavior: 'smooth' }));
  </script>

